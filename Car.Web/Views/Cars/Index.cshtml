<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Car Inventory</h1>
        <a asp-action="Create" class="btn btn-dark px-4" style="border-radius: 8px;">Create New</a>
    </div>

    <div class="cars-container">
        @foreach (var item in Model)
        {
            <div class="car-card">
                <img src="https://loremflickr.com/400/300/car?lock=@item.Id" class="car-img" alt="Car">

                <div class="car-body">
                    <div class="car-title">@item.Make @item.Model</div>

                    <div class="car-info-row">
                        <span>Year:</span>
                        <span>@item.Year</span>
                    </div>
                    <div class="car-info-row">
                        <span>Price:</span>
                        <span class="fw-bold text-dark">$@item.Price</span>
                    </div>
                    <div class="car-info-row">
                        <span>Condition:</span>
                        <span class="badge @(item.IsUsed ? "bg-light text-dark border" : "bg-dark")">
                            @(item.IsUsed ? "Used" : "New")
                        </span>
                    </div>

                    <div class="btn-group-modern">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-modern btn-edit">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-modern btn-details">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-modern btn-delete">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>